<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <include layout="@layout/video_bottom_progress_layout" />

    <ImageView
        android:id="@+id/cover_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <include layout="@layout/video_loading_layout" />

    <ImageView
        android:id="@+id/play_iv"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_centerInParent="true"
        android:src="@drawable/play_start" />

    <include layout="@layout/video_error_layout" />

    <com.lljy.custommediaplayer.view.controller.ShowControlView
        android:id="@+id/scl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"></com.lljy.custommediaplayer.view.controller.ShowControlView>
</RelativeLayout>